# Rico System Local Environment Configuration
# Diese Datei wird NICHT committet - nur als Beispiel
# Erstelle .env.local mit deinen echten API Keys

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Provider API Keys (HIER DEINE ECHTEN KEYS EINTRAGEN)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
PPLX_API_KEY=pplx-your-perplexity-key-here

# Model Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20241022
PPLX_MODEL=sonar
OPENAI_MODEL=gpt-4o-mini

# n8n Integration
N8N_ENABLED=true
N8N_WEBHOOK_BASE=http://localhost:5678
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Database (falls verwendet)
DATABASE_URL=sqlite:///./rico_ops.db

# Logging
LOG_LEVEL=INFO

