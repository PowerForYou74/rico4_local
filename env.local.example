# Rico System Local Environment Configuration
# Copy this file to .env.local and set your actual values

# Application Environment
APP_ENV=production
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
NEXT_PUBLIC_API_BASE=http://localhost:8000
NEXT_PUBLIC_N8N_BASE=http://localhost:5678

# n8n Configuration
N8N_ENABLED=true
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_EDITOR_BASE_URL=http://localhost:5678
N8N_GENERIC_TIMEZONE=Europe/Berlin

# Provider API Keys (REQUIRED - set your actual keys here)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
PPLX_API_KEY=pplx-your-perplexity-key-here

# Database (if used)
DATABASE_URL=sqlite:///./rico_ops.db

# Logging
LOG_LEVEL=INFO