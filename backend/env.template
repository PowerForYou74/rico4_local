# Rico Orchestrator Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Application Settings
APP_NAME=Rico Orchestrator
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Provider Settings
DEFAULT_PROVIDER=openai
AUTO_RACE_TIMEOUT=30.0

# Provider Keys (replace with your actual keys)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
PERPLEXITY_API_KEY=pplx-your-perplexity-key-here

# Backend & n8n
BACKEND_BASE=http://localhost:8000
N8N_ENABLED=true
N8N_HOST=http://localhost:5678
N8N_WEBHOOK_BASE=http://localhost:5678/webhook
N8N_API_KEY=
N8N_TIMEOUT_SECONDS=20

# Slack (optional)
SLACK_WEBHOOK_URL=

# Autopilot Configuration
AUTOPILOT_ENABLED=true
AUTOPILOT_QA_SELF_CHECK=false
AUTOPILOT_MAX_COST_PER_DAY=20
AUTOPILOT_ERROR_RATE_MAX=0.08
