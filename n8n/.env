# --- n8n Grundeinstellungen ---
N8N_HOST=127.0.0.1
N8N_PORT=5678
N8N_PROTOCOL=http

# Basisschutz (Basic Auth) – bitte Passwort später anpassen!
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=O3F-G27-8hg-J54-6LO-35

# Telemetrie & Personalisierung aus
N8N_DIAGNOSTICS_ENABLED=false
N8N_VERSION_NOTIFICATIONS_ENABLED=false
N8N_PERSONALIZATION_ENABLED=false
N8N_TELEMETRY_ENABLED=false

# Externe URL (für Webhooks, lokal erstmal nicht wichtig)
WEBHOOK_URL=http://localhost:5678/

# --- Datenbank: Postgres ---
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=n8npass

# --- Zeitzone ---
GENERIC_TIMEZONE=Europe/Berlin
TZ=Europe/Berlin

# --- n8n Datenverzeichnis im Container ---
DATA_FOLDER=/home/node/.n8n
N8N_SECURE_COOKIE=false

# Safari-spezifische Einstellungen
N8N_SKIP_WEBHOOK_DEREGISTRATION_SHUTDOWN=true
N8N_DISABLE_UI=false
