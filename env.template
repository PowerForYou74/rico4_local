# Rico System Environment Configuration Template
# Copy this file to .env.local and adjust the values

# Application Environment
APP_ENV=production
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
NEXT_PUBLIC_API_BASE=http://localhost:8000
NEXT_PUBLIC_N8N_BASE=http://localhost:5678

# n8n Configuration
N8N_ENABLED=true
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_EDITOR_BASE_URL=http://localhost:5678
N8N_GENERIC_TIMEZONE=Europe/Berlin

# Provider API Keys (set in .env.local)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
PPLX_API_KEY=your_perplexity_key_here

# Database (if used)
DATABASE_URL=sqlite:///./rico_ops.db

# Logging
LOG_LEVEL=INFO
